# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/academy?schema=public"
# For production, set a strong password:
DB_PASSWORD="postgres"

# Redis
REDIS_URL="redis://localhost:6379"

# Judge0
JUDGE0_URL="http://localhost:2358"
JUDGE0_AUTH_TOKEN=""
# LOCAL (macOS): Set to "true" - Judge0 requires Linux cgroups unavailable in Docker Desktop
# PRODUCTION (Linux): Set to "false" - Real code execution with Judge0
JUDGE0_MOCK_MODE="false"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Admin (for production, set a strong password)
ADMIN_PASSWORD="admin123"

# Session (generate with: openssl rand -base64 32)
SESSION_SECRET="your-session-secret-here"

# Admin Authentication
ADMIN_PASSWORD="your-admin-password-here"

# AI Providers (optional - can also configure in admin UI)
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
